{% extends 'base.html.twig' %}

{% block title %}BUNDLE Js info - Anfallnorr/FileManagerSystem{% endblock %}

{% macro treeRender(folders) %}
	<ul class="folder-tree list-none list-style-none _list-unstyled">
		{% for folder in folders %}
			{# {% set link_folder = path('app_file_manager', {'folder': folder.ltrimed_relative | raw}) %} #}
			{% set link_folder = path('app_file_manager', {'folder': folder.ltrimmed_relative | raw}) %}
			<li>
				{# <a href="{{ path('app_file_manager', {'folder': folder.relative}) }}" #}
				{# <a href="{{ link_folder }}" class="d-flex justify-content-between align-items-center"> #}
				<a href="{{ link_folder }}" class="btn btn-success d-flex justify-content-between align-items-center mb-2">
					<span><i class="bi bi-folder me-2"></i>{{ folder.foldername }}</span>
					<span class="float-end badge bg-light rounded-pill">5</span>
				</a>

				{% if folder.children is not empty %}
					{{ _self.treeRender(folder.children) }}
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endmacro treeRender %}

{% block body %}
