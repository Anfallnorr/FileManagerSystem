							<li class="breadcrumb-item" aria-current="page">
								<span>{{ item }}</span>
							</li>
						{% else %}
							<li class="breadcrumb-item">
								<a href="{{ path('app_file_manager', {'folder': breadcrumb_link | trim('/')}) }}">{{ item }}</a>
							</li>
						{% endif %}
					{% endfor %}
				</ol>
			</div>
			<div class="d-flex flex-sm-row flex-column mb-3">
